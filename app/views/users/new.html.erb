<center>

<h1> Welcome. Please create your profile. </h1>


<!-- Form for adding a new week -->
<%= form_for @user, html: {class: "pure-form pure-form-stacked"} do |f| %>

<div>
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>

<br>

<div>
    <%= f.label :username %>
    <%= f.text_field :username %>
</div>

<br>

<div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
</div>

<br>

<div>
    <%= f.label :email %> <br>
    <%= f.email_field :email %>
</div>

<br>


<%= f.submit "Save profile" %>
<%end%>

<br>
<%= link_to "Home", weeks_path %>

</center>







